<div class="container">



  <div class="list p-3 m-3">
    <h1><%= @cocktail.name %></h1>
    <div class="dose-card p-3 m-3">
      <% @cocktail.doses.each do |dose| %>
        <div class="ingredient-card">
          <p><%= dose.description %></p>
          <p><%= dose.ingredient.name %></p>
          <%= link_to "Delete this dose", dose_path(dose), method: :delete %>
        </div>
      <% end %>
    <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail.id) %>

    </div>

    <%= link_to "Back to cocktails list", cocktails_path %>
  </div>
</div>






